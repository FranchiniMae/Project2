<div class="container userhome">
	Welcome, <%= @user.first_name %>
</div>

<div class="container">

<p id="upcoming"> upcoming challenges <span class="badge"><%= @user.challenges.count %></span> </p>

</div>

<div class="container">

<% @user.challenges.each do |challenge| %>
	<div>
	  <div class="col-xs-6 col-sm-4">
	    <div class="thumbnail">
	      <img id="challengepic" src="http://images.hilleberg.net/products/Tarra/Hilleberg-TarraGrn-Colombia-071CO0Q01oH-AgnieszkaANDMateuszWaligora.jpg">
	      <div class="caption">
	      	<h3>
	        <%= link_to challenge.name, challenge_path(challenge) %></h3>

				<%= challenge.description %>
				<%= challenge.goal_date%>
				<%= challenge.reward %>	        
	      </div>
	    </div>
	  </div>
<% end %> 

</div>

