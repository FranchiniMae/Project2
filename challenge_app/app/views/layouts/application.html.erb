<!DOCTYPE html>
<html>
<head>
  <title>ChallengeApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<header class='clearfix'>
	<% if not current_user %>
		<div class="right-nav">
		<ul>
		<li><%= link_to "Sign Up", new_user_path %></li>
		</ul>
		</div>
	<% else %>
		<div class="right-nav">
		<ul>
		<li><%= link_to "Sign Out", logout_path, :method => :delete %>
		</li>
		</ul>
		</div>

		<div class="right-nav">
		<ul>
		<li><%= link_to "Add Challenge", new_challenge_path %></li>
		</ul>
		</div>

	<% end %>
</header>

<body>

<%= yield %>
<%= console %>

</body>
</html>
