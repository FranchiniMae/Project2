<%= form_for @challenge do |f| %>
	<div>
		<%= f.text_field :name, placeholder: "Name" %>
	</div>
	<div>
		<%= f.text_field :description, placeholder: "Description", size: '60x6' %>
	</div>
	<div>
		<label> Goal Date </label>
		<%= f.date_select :goal_date, placeholder: "Goal Date" %>
	</div>
	<div> 
		<%= f.text_field :reward, placeholder: "Reward" %>
	</div>
	<%= f.submit %>
<% end %>