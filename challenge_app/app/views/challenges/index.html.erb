Challenges go here!

<% @challenges.each do |challenge| %>
	<div>
		<h3><%= challenge.name %></h3>
		<%= challenge.description %><br>
		<%= challenge.reward %>
	</div>
	<%= link_to "Delete Challenge", @challenge, method: :delete %>
	<br>

	<% if @current_user %>
		<%= button_to "Join", challenge_users_path(challenge) %>
	<% end %>


<% end %>