<div>
	<h1 id="h1user">Join A Challenge</h1>
</div>

<div class="container">

	<% @challenges.each do |challenge| %>
	<!-- 	<div> -->
		  <div class="col-xs-4 col-sm-4">
		    <div class="thumbnail">
		      <img id="challengepic" src="<%= challenge.img_url %>">
					<h3>
					<%= link_to challenge.name, challenge_path(challenge) %></h3>

				<% if @current_user %>
					<%= button_to "Join", challenge_users_path(challenge) %>
				<% end %>
	     
		      </div>
		    </div>
		  <!-- </div> -->

	<% end %>

</div>
