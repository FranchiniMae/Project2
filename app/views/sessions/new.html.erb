<h1 id="h1user">LOGIN</h1>


<div class="createform">
	<%= form_for @user, url: "/sessions", method: "post" do |f| %>
		<div>
			<%= f.text_field :email, placeholder: "Email", required: true %>
		</div>
			<br>
		<div>
			<%= f.password_field :password, placeholder: "Password", required: true %>
		</div>
			<br>
		<%= f.submit "Login", :class => 'btn btn-success' %>
	<% end %>
</div>

